{
  //sets the trackers layout
  //more info: https://github.com/black-sliver/PopTracker/blob/master/doc/PACKS.md#layouts
  "tracker_default": {
    "type": "container",
    "background": "#000000",
    "content": {
      "type": "dock",
      "dropshadow": true,
      "content": [
        {
          "type": "dock",
          "dock": "bottom",
          "h_alignment": "stretch",
          "content": [
            {
              "type": "layout",
              "key": "bottom_bar"
            }
          ]
        },
        {
          "type": "tabbed",
          "tabs": [
            {
              "title": "Super Metroid",
              "content": {
                "type": "layout",
                "key": "sm_maps"
              }
            },
            {
              "title": "Link to the Past",
              "content": {
                "type": "layout",
                "key": "alttp_maps"
              }
            }
          ]
        }
      ]
    }
  },
  "tracker_horizontal": {
    "type": "container",
    "background": "#000000",
    "content": {
      "type": "dock",
      "dropshadow": true,
      "content": [
        {
          "type": "dock",
          "dock": "bottom",
          "h_alignment": "stretch",
          "content": [
            {
              "type": "layout",
              "key": "bottom_bar"
            }
          ]
        },
        {
          "type": "tabbed",
          "tabs": [
            {
              "title": "Both",
              "content": {
                "type": "tabbed",
                "tabs": [
                  {
                    "title": "Compact",
                    "content": {
                      "type": "array",
                      "orientation": "horizontal",
                      "h_alignment": "center",
                      "content": [
                        {
                          "type": "map",
                          "maps": [
                            "metroid"
                          ]
                        },
                        {
                          "type": "map",
                          "orientation": "vertical",
                          "maps": [
                            "lightworld",
                            "darkworld"
                          ]
                        }
                      ]
                    }
                  },
                  {
                    "title": "Full",
                    "content": {
                      "type": "map",
                      "orientation": "horizontal",
                      "h_alignment": "center",
                      "maps": [
                        "metroid",
                        "lightworld",
                        "darkworld"
                      ]
                    }
                  }
                ]
              }
            },
            {
              "title": "Super Metroid",
              "content": {
                "type": "layout",
                "key": "sm_maps"
              }
            },
            {
              "title": "Link to the Past",
              "content": {
                "type": "layout",
                "key": "alttp_maps"
              }
            }
          ]
        }
      ]
    }
  }
}